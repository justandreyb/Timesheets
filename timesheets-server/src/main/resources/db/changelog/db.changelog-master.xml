<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2018-07-15-1" author="justandreyb">
        <createTable tableName="activity_category">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <rollback>
            <dropTable tableName="activity_category"/>
        </rollback>
    </changeSet>

    <changeSet id="2018-07-15-2" author="justandreyb">
        <createTable tableName="user_settings">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="daily_work_time" type="int" defaultValue="8">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(36)" defaultValue="USD">
                <constraints nullable="false"/>
            </column>
            <column name="month_salary" type="decimal(10,2)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <rollback>
            <dropTable tableName="user_settings"/>
        </rollback>
    </changeSet>

    <changeSet id="2018-07-15-3" author="justandreyb">

        <createTable tableName="department">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="short_name" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>

        <createTable tableName="project">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="short_name" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>

        <createTable tableName="user">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="user_settings_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_user_settings"
                                 baseTableName="user" baseColumnNames="user_settings_id"
                                 referencedTableName="user_settings" referencedColumnNames="id" />

        <createTable tableName="projects_to_departments">
            <column name="department_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_p2d_department"
                                 baseTableName="projects_to_departments" baseColumnNames="department_id"
                                 referencedTableName="department" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_p2d_project"
                                 baseTableName="projects_to_departments" baseColumnNames="project_id"
                                 referencedTableName="project" referencedColumnNames="id" />

        <createTable tableName="users_to_departments">
            <column name="department_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_u2d_department"
                                 baseTableName="users_to_departments" baseColumnNames="department_id"
                                 referencedTableName="department" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_u2d_user"
                                 baseTableName="users_to_departments" baseColumnNames="user_id"
                                 referencedTableName="user" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="2018-07-15-4" author="justandreyb">
        <createTable tableName="tag">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="creator_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_user"
                                 baseTableName="tag" baseColumnNames="creator_id"
                                 referencedTableName="user" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="2018-07-15-5" author="justandreyb">
        <createTable tableName="activity">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="start_point" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="end_point" type="timestamp"/>
            <column name="project_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="activity_category_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_activity_user"
                                 baseTableName="activity" baseColumnNames="user_id"
                                 referencedTableName="user" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_activity_project"
                                 baseTableName="activity" baseColumnNames="project_id"
                                 referencedTableName="project" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_activity_activity_category"
                                 baseTableName="activity" baseColumnNames="activity_category_id"
                                 referencedTableName="activity_category" referencedColumnNames="id" />

        <createTable tableName="tags_to_activities">
            <column name="activity_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_t2a_activity"
                                 baseTableName="tags_to_activities" baseColumnNames="activity_id"
                                 referencedTableName="activity" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_t2a_tag"
                                 baseTableName="tags_to_activities" baseColumnNames="tag_id"
                                 referencedTableName="tag" referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>